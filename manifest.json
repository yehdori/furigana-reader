{
  "manifest_version": 3,
  "name": "Furigana Reader",
  "version": "0.1.0",
  "permissions": ["storage"],
  "host_permissions": ["https://api.openai.com/*"],
  "content_scripts": [
    {
      "matches": ["https://example.com/*"],
      "js": ["src/content.js"]
    }
  ],
  "background": {
    "service_worker": "src/background.js"
  }
}
